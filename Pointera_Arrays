#include <iostream>
using namespace std;
int main(){
    int arr[5];
    /*cout << arr << endl; //address
    cout << arr[0] << endl; //value
    cout << &arr[0] << endl; //address
    cout << *arr << endl; //value */
    
    for(int i=0; i<=2; i++) {
        cout << "Number " << i+1 <<" : ";
        cin >> arr[i];
    }
    
    for(int i=0; i<=2; i++) {
        //cout << arr[i] << " ";
        cout << *(arr+i) << " ";
    }
    
}
